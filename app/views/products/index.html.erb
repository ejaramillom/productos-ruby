<div class="container">
  <div class="row">
    <div class="col-sm-12">

      <h1>Productos</h1>

      <div class="text-right">
        <%= link_to "Publicar producto", new_product_path, class: "btn btn-primary" %>
      </div>

      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Categorías</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.price %></td>
              <td><%= product.categories.pluck(:name).join(",") %></td>
              <td>
                <%= link_to "Mostrar", product %>
                <%= link_to "Editar", edit_product_path(product) %>
                <%= link_to "Eliminar", product, method: :delete, data: { confirm: "¿Estás seguro de eliminar este producto?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
